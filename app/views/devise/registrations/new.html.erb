<style>
  /* Center the login form */
  .login-container {
    display: flex;
    justify-content: center;
    align-items: center;
    
  }

  /* Styling for the login form */
  .login-form {
    width: 300px;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 8px;
    background-color: #f9f9f9;
  }

  .login-form h2 {
    text-align: center;
  }

  .login-form .field {
    margin-bottom: 15px;
  }

  .login-form label {
    display: block;
    font-weight: bold;
  }

  .login-form .email-input,
  .login-form .password-input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }

  .login-form .blue-button {
    background-color: #007bff;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  .login-form .blue-button:hover {
    background-color: #0056b3;
  }
</style>

<div class="login-container">
  <div class="login-form">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "email-input" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "password-input" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "password-input" %>
      </div>

    <div class="actions">
    <%= render "devise/shared/links" %>
    </div>
    <br>
      <div class="actions">
        <%= f.submit "Sign up", class: "blue-button" %>
      </div>
    <% end %>
  </div>
</div>
