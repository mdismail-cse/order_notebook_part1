<div class="w-full">
<%
=begin%>
 <%= link_to "Update Password", edit_password_path %> 
<%
=end%>
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <%
=begin%>
 <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Purchase orders</h1>
    <%= link_to 'New purchase order', new_purchase_order_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div> 
<%
=end%>

  <div id="purchase_orders" class="min-w-full">
    <%
=begin%>
 <%= render @purchase_orders %> 
<%
=end%>

  <!-- app/views/purchase_orders/index.html.erb -->

<h1 style="font-size: 2.5rem; font-weight: bold; color: #4a5568; text-align: center; padding: 1rem 0;">Purchase Orders</h1>

<br>
<div style="background-color: #f7fafc; padding: 1rem; border: 1px solid #e2e8f0; border-radius: 0.5rem;"> 
  <table class="min-w-full">
    <thead>
      <tr class="border-b-2 border-gray-300">
        <th class="px-4 py-2 text-center align-middle">Purchase Order ID</th>
        <th class="px-4 py-2 text-center align-middle">Total Price</th>
        <th class="px-4 py-2 text-center align-middle">Purchased By User</th>
      </tr>
    </thead>
    <tbody>
      <% @purchase_orders.each do |purchase_order| %>
        <tr class="border-b border-gray-300">
          <td class="px-4 py-2 text-center align-middle"><%= purchase_order.id %></td>
          <td class="px-4 py-2 text-center align-middle"><%= @total_prices_per_purchase_order[purchase_order.id] || 0 %></td>
          <% line_item = purchase_order.line_items.first %>
          <td class="px-4 py-2 text-center align-middle"><%= line_item&.order_user_id || "No ID" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>




</div>
